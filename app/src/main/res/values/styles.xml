<resources>

    <style name="Widget.Theme.TradIntro.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.TradIntro.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="Widget.Theme.TradIntro.NoActionbar.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>


    <style name="Theme.TradIntro.TitleText" parent="Theme.TradIntro">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>

    </style>

    <style name="Theme.TradIntro.Button" parent="Theme.TradIntro">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
    </style>

</resources>


