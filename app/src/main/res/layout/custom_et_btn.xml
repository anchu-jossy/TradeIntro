<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="label1"
            type="String" />

        <variable
            name="label2"
            type="String" />

        <variable
            name="label1Hint"
            type="String" />

        <variable
            name="label2Hint"
            type="String" />

        <variable
            name="buttonLabel"
            type="String" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="@{title}"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_16sdp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/label1Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans_medium"
                    android:maxLines="1"
                    android:text="@{label1}"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/my_profile_lbl" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/label1Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/editext_frame"
                    android:fontFamily="@font/open_sans"
                    android:hint="@{label1Hint}"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toBottomOf="@+id/label1Tv" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/label2Tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans_medium"
                    android:maxLines="1"
                    android:text="@{label2}"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintTop_toBottomOf="@+id/label1Et"
                    tools:text="@string/my_profile_lbl" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/label2Et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/editext_frame"
                    android:fontFamily="@font/open_sans"
                    android:hint="@{label2Hint}"
                    android:padding="@dimen/_3sdp"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintTop_toBottomOf="@+id/label2Tv" />


                <androidx.appcompat.widget.AppCompatButton
                    style="@style/Theme.TradIntro.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20sdp"
                    android:background="@color/magenta"
                    android:text="@{buttonLabel}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/label2Et"
                    app:layout_constraintWidth_percent="0.7" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>